@model Geoprofs.Models.Absence

@{
    ViewData["Title"] = "Create";
}
@{
    TempData.Keep("admin");
    TempData.Keep("User_id");
    TempData.Keep("Team_id");
}

<h1>Create</h1>

<h4>Absence</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="userId" class="control-label"></label>
                <input asp-for="userId" class="form-control" value="@TempData["User_id"]" readonly/>
                <span asp-validation-for="userId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team_id" class="control-label"></label>
                <input asp-for="Team_id" class="form-control" value="@TempData["Team_id"]" readonly/>
                <span asp-validation-for="Team_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartAbsence" class="control-label"></label>
                <input asp-for="StartAbsence" class="form-control" />
                <span asp-validation-for="StartAbsence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StopAbsence" class="control-label"></label>
                <input asp-for="StopAbsence" class="form-control" />
                <span asp-validation-for="StopAbsence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="reason" class="control-label"></label>
                <input asp-for="reason" class="form-control" />
                <span asp-validation-for="reason" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
